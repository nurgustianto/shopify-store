<div class="custom-content">
  <h2>{{ section.settings.title }}</h2>
  <div class="custom-content__text">
    {{ section.settings.text }}
  </div>
</div>

{% schema %}
{
  "name": "Custom Content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Customize Your Jersey"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Add names, numbers, and custom patches to make it your own"
    }
  ],
  "presets": [
    {
      "name": "Custom Content"
    }
  ]
}
{% endschema %}