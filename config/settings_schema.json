{
  "name": "settings_schema",
  "settings": [
    {
      "type": "header",
      "content": "Jersey Purchase Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_size_selection",
      "label": "Enable Jersey Size Selection",
      "default": true
    },
    {
      "type": "select",
      "id": "default_size",
      "label": "Default Jersey Size",
      "options": [
        {
          "value": "S",
          "label": "Small"
        },
        {
          "value": "M",
          "label": "Medium"
        },
        {
          "value": "L",
          "label": "Large"
        },
        {
          "value": "XL",
          "label": "Extra Large"
        }
      ],
      "default": "M"
    },
    {
      "type": "header",
      "content": "Patch Options"
    },
    {
      "type": "checkbox",
      "id": "enable_additional_patches",
      "label": "Enable Additional Patches",
      "default": true
    },
    {
      "type": "text",
      "id": "patch_options",
      "label": "Additional Patch Options (comma-separated)",
      "default": "Name, Number, Custom"
    }
  ]
}